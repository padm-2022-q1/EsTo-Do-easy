<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".view.NewTaskDetailsFragment">


    <TextView
        android:id="@+id/task_details_group_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_details_group_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/task_details_group"
        />

    <TextView
        android:id="@+id/task_details_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_group"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_details_group_label"/>

    <TextView
        android:id="@+id/task_details_date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/task_details_date_created_default"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/task_details_group"
        app:layout_constraintTop_toBottomOf="@id/task_details_group" />

    <TextView
        android:id="@+id/task_details_date_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/task_details_date_updated_default"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/task_details_date_created"
        app:layout_constraintTop_toBottomOf="@id/task_details_group" />
    <TextView
        android:id="@+id/task_details_dependencies_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_details_dependencies_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_details_date_updated"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_next_tasks_list"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_next_tasks_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/task_details_dependencies_label">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>