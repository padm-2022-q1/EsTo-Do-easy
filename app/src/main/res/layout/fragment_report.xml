<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:padding="8dp">

    <Button
        android:id="@+id/report_button_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/report_button_customized"
        android:text="@string/report_button_text_daily"
        app:layout_constraintEnd_toStartOf="@+id/report_button_weakly"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_button_weakly" />

    <Button
        android:id="@+id/report_button_weakly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/report_button_customized"
        android:text="@string/report_button_text_weakly"
        app:layout_constraintEnd_toStartOf="@+id/report_button_monthly"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/report_button_diary"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/report_button_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/report_button_customized"
        android:text="@string/report_button_text_monthly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/report_button_weakly"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>