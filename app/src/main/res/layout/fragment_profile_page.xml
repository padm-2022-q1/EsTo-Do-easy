<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_page_fragment"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/profile_page_fragment"
        app:layout_constraintRight_toRightOf="@id/profile_page_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.125"
        android:src="@drawable/ic_action_profile"
        android:layout_margin="32dp"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_username_profile"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_username_text_base"
        app:layout_constraintLeft_toLeftOf="@id/profile_page_fragment"
        app:layout_constraintTop_toBottomOf="@id/profile_image_profile"
        android:textSize="32sp"
        android:textStyle="bold"
        >
    </com.google.android.material.textview.MaterialTextView>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_email_profile"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_email_text_base"
        app:layout_constraintLeft_toLeftOf="@id/profile_page_fragment"
        app:layout_constraintTop_toBottomOf="@id/profile_username_profile"
        android:textSize="24sp"
        android:textStyle="bold"
        >
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_sync_google_calendar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:text="@string/profile_sync_google_calendar_button_text"
        app:icon="@drawable/ic_icons8_google"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        app:layout_constraintLeft_toLeftOf="@id/profile_email_profile"
        app:layout_constraintTop_toBottomOf="@id/profile_email_profile"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_achivements_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:text="@string/profile_achievements_button_text"
        app:icon="@drawable/ic_baseline_stars_24"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        app:layout_constraintLeft_toLeftOf="@id/profile_email_profile"
        app:layout_constraintTop_toBottomOf="@id/profile_sync_google_calendar"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_sign_out"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="@string/profile_sign_out_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintRight_toRightOf="@id/profile_achivements_button"
        app:layout_constraintTop_toBottomOf="@id/profile_achivements_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>