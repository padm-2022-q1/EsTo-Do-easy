<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_page_fragment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ScrollViewCount">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.05"
                android:src="@drawable/ic_action_profile"
                >
            </com.google.android.material.imageview.ShapeableImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_username_profile"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_username_text_base"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_image_profile"
                android:textSize="32sp"
                android:textStyle="bold"
                android:padding="12dp"
                >
            </com.google.android.material.textview.MaterialTextView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/profile_email_profile"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_email_text_base"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_username_profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="12dp"
                >
            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_sync_google_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/profile_sync_google_calendar_button_text"
                app:icon="@drawable/ic_icons8_google"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:layout_constraintLeft_toLeftOf="@id/profile_email_profile"
                app:layout_constraintTop_toBottomOf="@id/profile_email_profile"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/profile_settings_button_text"
                app:icon="@drawable/ic_baseline_settings_24"
                app:iconSize="48sp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:layout_constraintLeft_toLeftOf="@id/profile_email_profile"
                app:layout_constraintTop_toBottomOf="@id/profile_sync_google_calendar"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_achievements_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/profile_achievements_button_text"
                app:icon="@drawable/ic_baseline_stars_24"
                app:iconSize="48sp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:layout_constraintLeft_toLeftOf="@id/profile_email_profile"
                app:layout_constraintTop_toBottomOf="@id/profile_settings_button"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_sign_out"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/profile_sign_out_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                app:layout_constraintRight_toRightOf="@id/profile_achievements_button"
                app:layout_constraintTop_toBottomOf="@id/profile_achievements_button"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_sign_in"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/profile_home_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@id/profile_achievements_button"
                app:layout_constraintTop_toBottomOf="@id/profile_achievements_button"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>